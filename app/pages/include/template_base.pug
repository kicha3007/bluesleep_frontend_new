include mixins
include variables
block variables

include blocks/basket-modal

doctype hmtl
html(lang="ru")
	head
		meta(charset="UTF-8")
		- title_page = typeof title ==="undefined" ? 'Bluesleep' : 'Bluesleep | '+title
			title #{title_page}
		meta(name="viewport", content="width=device-width initial-scale=1.0")
		block assets
			link(rel="stylesheet", href="css/style.css")

			link(href="https://fonts.googleapis.com/css?family=Fira+Sans:300,400,400i,500,600,700|Play:400,700&amp;subset=cyrillic", rel="stylesheet")

			script(src="js/jquery-3.3.1.min.js")
			script(src="js/ion.rangeSlider.js")
			script(src="https://api-maps.yandex.ru/2.1/?lang=ru_RU&amp;apikey=AOdAv1sBAAAAXICWVQIAnR0v82iJhgxR0a27DXyuEK4B5l4AAAAAAAAAAACfKz601Ig5Q29mUYdHawLx3ww6ZQ==" type="text/javascript")


			//- not include in bitrix
			script(src="js/svg-sprite.js")


			script(src="js/slick.min.js")
			script(src="js/jquery.fancybox.min.js")
			//script(src="js/jquery.selectric.min.js")
			script(src="js/scripts.js")

	body

		.main-wrapper

			include header.pug
			if(typeof titlePage !== "undefined" && titlePage)
				h1.all-page-title #{titlePage}

			main.main
				block content
				+basket-modal()(data-basket-modal)

		include footer.pug

		//- кнопка вверх
		//-
			button.up-button.js--anchor(data-target="top")
				.up-button__svg
					+icon('arrow-left', 'rotate-90')
		
		//- модальные окна
		div(style="display: none;")

			//- окно уведомления
			//.box-modal.box-modal_size_middle#notification
				.box-modal__container
					.box-modal__header
						span.box-modal__title Уведомление
						.box-modal__close.arcticmodal-close
							+icon('close')
					.box-modal__body
						.text-center
							h2 Вы успешно зарегистрировались
							botton.btn.arcticmodal-close ок
	.overlay(data-overlay)




























